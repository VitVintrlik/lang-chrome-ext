{
    "manifest_version": 3,
    "name": "Netflix Subtitle Translator",
    "description": "Translate and explain Netflix subtitles with AI",
    "version": "0.1.0",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Netflix Subtitle Translator",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.netflix.com/*"
    ],
    "background": {
        "service_worker": "static/js/background.js"
    },
    "content_scripts": [{
        "js": ["static/js/content.js"],
        "matches": ["*://*.netflix.com/*"]
    }]
}
